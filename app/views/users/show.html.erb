<h1>Displaying info of Users found by their ID</h1>
<p><%= @user.name %></p>
<p><%= @user.email %></p>
<p><%= link_to "Sign out", signout_path, method: "delete" %></p>
<%= link_to 'Add Plates', new_plate_path %>


<h2>Your plates</h2>
<% current_user.plates.each do |plate| %>
<p>
	<%= plate.license %>
	<%= link_to "delete", plate, method: "delete" %>
	<%= link_to "add ticket", new_ticket_path(plate_id: plate.id) %>

	<!-- <a href="/tickets/<%= plate.id %>">Tickets</a> --> 
</p>
<% end %>

<%= form_for(@plate, html: { class: "form-horizontal"}) do |f| %>
	<div class="control-group">
		<%= f.label :license, class: 'control-label' %>
		<div class="controls">
			<%= f.text_field :license %>
		</div>
	</div>
	<div class="control-group" >
    	<div class="controls">
      <%= f.submit 'Add', class: 'btn btn-primary'%>
    </div>
  </div>
<% end %>